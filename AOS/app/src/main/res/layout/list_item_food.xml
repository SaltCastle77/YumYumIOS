<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/food_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateDrawable="@drawable/ic_nut_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:id="@+id/text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:animDuration="200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_goneMarginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxCollapsedLines="1">

            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/gray_6"
                android:textSize="16sp" />

            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@android:color/transparent"
                android:padding="5dp" />
        </com.ms.square.android.expandabletextview.ExpandableTextView>

        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:text="AshOil"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/text_name"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="감자탕"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/text_placename"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="염이네 감자탕"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_detail"
            tools:layout_editor_absoluteY="685dp" />

        <TextView
            android:id="@+id/tv_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/text_detail"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/av_thumb_up2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_like_num"
            app:lottie_colorFilter="@color/white"
            app:lottie_fileName="ic_thumb_up.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/av_thumb_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_like_num"
            app:lottie_colorFilter="@color/white"
            app:lottie_fileName="ic_thumb_up.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/av_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/text_placename"
            app:layout_constraintStart_toEndOf="@+id/text_name"
            app:lottie_colorFilter="@color/colorPrimary"
            app:lottie_fileName="ic_neutral.json" />
    </com.ms.square.android.expandabletextview.ExpandableTextView>

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:text="AshOil"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/text_name"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="감자탕"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="염이네 감자탕"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_detail"
        tools:layout_editor_absoluteY="685dp" />

    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/text_detail"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_thumb_up2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_like_num"
        app:lottie_colorFilter="@color/white"
        app:lottie_fileName="ic_thumb_up.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_like_num"
        app:lottie_colorFilter="@color/white"
        app:lottie_fileName="ic_thumb_up.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:lottie_colorFilter="@color/white"
        android:visibility="gone"
        app:lottie_fileName="ic_vomited.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:lottie_colorFilter="@color/white"
        android:visibility="gone"
        app:lottie_fileName="ic_confused.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:lottie_colorFilter="@color/white"
        android:visibility="gone"
        app:lottie_fileName="ic_neutral.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:lottie_colorFilter="@color/white"
        android:visibility="gone"
        app:lottie_fileName="ic_lol.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_placename"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        app:lottie_colorFilter="@color/white"
        android:visibility="gone"
        app:lottie_fileName="ic_inloveface.json" />

    <ImageButton
        android:id="@+id/btn_edit_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_video"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_feed"
        app:layout_constraintTop_toTopOf="@+id/food_video"
        app:srcCompat="@android:drawable/ic_menu_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>
